<p id="notice"><%= notice %></p>

<h1>Materials</h1>

<table>
  <thead>
    <tr>
      <th>Thin elastic</th>
      <th>Thick elastic</th>
      <th>Fat quarters</th>
      <th>Mailers</th>
      <th>Stamps</th>
      <th>Completed pairs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.thin_elastic %></td>
        <td><%= material.thick_elastic %></td>
        <td><%= material.fat_quarters %></td>
        <td><%= material.mailers %></td>
        <td><%= material.stamps %></td>
        <td><%= material.completed_pairs %></td>
        <td><%= link_to 'Show', material %></td>
        <td><%= link_to 'Edit', edit_material_path(material) %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

