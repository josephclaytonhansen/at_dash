<p id="notice"><%= notice %></p>
<%user = User.find_by email: 'denise.jacobsen12@gmail.com'%>
<%if current_user == user%>
<div class="card" style="margin:auto;max-width:70%;">
<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Created</th>
      <th>Shipped</th>
      <th>Amount</th>
      <th>Stamps</th>
      <th>Revenue</th>
      <th>Customer name</th>
      <th>Customer email</th>
      <th>Needs follow up</th>
      <th>Tracking number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created %></td>
        <td><%= order.shipped %></td>
        <td><%= order.amount %></td>
        <td><%= order.stamps %></td>
        <td><%= order.revenue %></td>
        <td><%= order.customer_name %></td>
        <td><%= order.customer_email %></td>
        <td><%= order.needs_follow_up %></td>
        <td><%= order.tracking_number %></td>
        <td><%= link_to 'Show', order, class: "view-order" %></td>
        <td><%= link_to 'Edit', edit_order_path(order),class: "view-order" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "view-order" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path, class: "view-order" %>
</div>
<%else%>
<h2 class = "card">You must sign in as the admin</h2>
<%end%>